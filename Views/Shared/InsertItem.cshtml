<!-- Modal -->
<div class="modal fade" id="insertModal" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content data-bs-theme=dark">
            <div class="modal-header">
                <h4 class="modal-title">Insert New Item</h4>
            </div>

            <div class="modal-body">
                <div class="row">
                    <div class="col-mb-6">
                        <form asp-action="Create" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="form-floating mb-3 mt-3">
                                <input asp-for="Name" class="form-control" placeholder="Name" required />
                                <label class="control-label">Item Name</label>
                                <div class="valid-feedback">Valid.</div>
                                <div class="invalid-feedback">Please fill out this field.</div>
                            </div>
                            <div class="form-floating mb-3 mt-3">
                                <input asp-for="Description" class="form-control" placeholder="Description" />
                                <label class="control-label">Description</label>
                            </div>
							<div class="form-floating mb-3 mt-3">
                                <input asp-for="Price" class="form-control" placeholder="Price" required />
                                <label class="control-label">Item Price</label>
                                <div class="valid-feedback">Valid.</div>
                                <div class="invalid-feedback">Please fill out this field.</div>
                            </div>
							<div class="form-group mb-3 mt-3">
								 Discount
								<div class="checkbox">
                                    <label> <input type="radio" asp-for="Discount" value="yes" /> Yes</label>
                                </div>
                                <div class="checkbox">
                                    <label> <input type="radio" asp-for="Discount" value="no" /> No</label>
                                </div>
                            </div>
                            <div class="form-floating mb-3 mt-3">
                                <select class="form-select" id="sel" asp-for="Category">
                                    <option value="" disabled selected>Select Catagory</option>
                                    <option>Medicine</option>
                                    <option>Personal Care</option>
                                    <option>Vitamins & Supplements</option>
                                    <option>Medical Devices</option>
                                </select>
                                <label for="sel" class="form-label">Select Catagory:</label>
                                <div class="valid-feedback">Valid.</div>
                                <div class="invalid-feedback">Please fill out this field.</div>
                            </div>
                            <div class="form-floating mb-3 mt-3">
                                <input asp-for="Quantity" class="form-control" placeholder="Quantity" required />
                                <label class="control-label">Quantity</label>
                                <div class="valid-feedback">Valid.</div>
                                <div class="invalid-feedback">Please fill out this field.</div>
                            </div>
							<div class="form-control mb-3 mt-3">
								<input type="file" class="form-control" name="file" />
                            </div> <br />
                            <div class="d-grid gap-3">
                                <button type="submit" class="btn btn-primary">Save</button>
                                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
                            </div>
                        </form>   
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
