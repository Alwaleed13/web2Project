@model web2Project.Models.Customer

@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<style>
    body {
        background-image: url('/images/pharmacybg.png');
        background-position: center;
        background-repeat: no-repeat;
        background-attachment: fixed;
    }

    .center {
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 80vh;
    }

    .register-card {
        background-color: rgba(33, 37, 41, 0.85);
        padding: 40px;
        border-radius: 15px;
        box-shadow: 0 0 20px rgba(0,0,0,0.5);
        width: 100%;
        max-width: 600px;
        color: white;
    }
</style>

<div class="center">
    <form asp-action="Edit" class="register-card">
        <h1 class="text-center">Edit Customer</h1>

        <input type="hidden" asp-for="Id" />

        <div class="form-floating mb-3 mt-3">
            <input asp-for="Name" class="form-control" placeholder="Name" readonly />
            <label class="control-label text-dark">Name</label>
        </div>

        <div class="form-floating mb-3 mt-3">
            <input asp-for="Password" type="text" class="form-control" placeholder="Password" required />
            <label class="control-label text-dark">Password</label>
        </div>

        <div class="form-floating mb-3 mt-3">
            <input asp-for="Email" type="email" class="form-control" placeholder="Email" />
            <label class="control-label text-dark">Email (Optional)</label>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3 mt-3">
            <select class="form-select" id="sel" asp-for="Job">
                <option value="" disabled selected>Select Job (Optional)</option>
                <option>Teacher</option>
                <option>Engineer</option>
                <option>Doctor</option>
                <option>Student</option>
            </select>
            <label for="sel" class="form-label text-dark">Select Job:</label>
        </div>

        <div class="form-group mb-3 mt-3">
            <div class="checkbox">
                <label> <input type="radio" asp-for="Gender" value="Male" /> Male</label>
            </div>
            <div class="checkbox">
                <label> <input type="radio" asp-for="Gender" value="Female" /> Female</label>
            </div>
        </div>

        <div class="form-group mb-3 mt-3">
            <div class="checkbox">
                <label><input type="checkbox" asp-for="Married" /> Married </label>
            </div>
        </div>

        <div class="form-floating mb-3 mt-3">
            <textarea class="form-control" id="location" asp-for="Location" placeholder="Location"></textarea>
            <label for="location" class="text-dark">Location (Optional)</label>
        </div>

        <div class="d-grid gap-2">
            <button type="submit" class="btn btn-primary">Save Changes</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            <h6 class="text-danger mt-2 text-center">@ViewData["Message"]</h6>
        </div>
    </form>
</div>