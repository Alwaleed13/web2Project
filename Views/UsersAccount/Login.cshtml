@{
    ViewData["Title"] = "Login";
}
<style> 
    body {
        background-image: url('/images/pharmacybg.png');
        background-position: center; 
        background-repeat: no-repeat;
		background-attachment: fixed;
    }

    .center {
        display: flex;
		align-items: center;
		justify-content: center;
        min-height: 80vh;
    }

    .login-card {
        background-color: rgba(33, 37, 41, 0.85);
        padding: 40px;
        border-radius: 15px; 
        box-shadow: 0 0 20px rgba(0,0,0,0.5); 
        width: 100%;
        max-width: 600px; 
        color: white;
		        
    }

</style>

<div class ="center">

	<form asp-action="Login" class="login-card">
		<h1>Login </h1>
    <div class="form-floating mb-3 mt-3">
		<input name="na" class="form-control" placeholder="Name" required />
        <label class="control-label"> User Name</label>
        <div class="valid-feedback">Valid.</div>
        <div class="invalid-feedback">Please fill out this field.</div>
    </div>
    <div class="form-floating mb-3 mt-3">
		<input name="pa" type="password" class="form-control" placeholder="Password" required />
        <label for="pa"  class="control-label"> User Password</label>
        <div class="valid-feedback">Valid.</div>
        <div class="invalid-feedback">Please fill out this field.</div>
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
    <p style="color:red"> @ViewData["message"]</p>
    <div>
        <input type="checkbox" name="auto" /> Auto Login
    </div>
</form>
</div>