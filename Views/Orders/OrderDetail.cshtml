@model IEnumerable<web2Project.Models.Order>
@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<style>
    body {
        background-image: url('/images/pharmacybg.png');
        background-position: center;
        background-repeat: no-repeat;
        background-attachment: fixed;
    }

    .card {
        background-color: rgba(33, 37, 41, 0.85);
        padding: 40px;
        border-radius: 15px;
        color: white;
    }
</style>

<div class="card col-md-8 mx-auto mt-5">
    <h1 class="text-center">Orders Details</h1>
    <hr />

    <table class="table">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Date</th>
                <th>Total Amount</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.OrderDate</td>
                    <td>@item.Total</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="mt-3 text-center">
        <a asp-action="Index" class="btn btn-secondary">Back to Report</a>
    </div>
</div>